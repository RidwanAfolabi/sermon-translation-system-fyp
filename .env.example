# .env.example
# Purpose: Template of required environment variables for local/dev setup.
# Usage: Copy this file to ".env" and fill in the values:
#   cp .env.example .env
# Notes:
# - Format is KEY=VALUE (no quotes unless value contains special chars).
# - Do not commit your real .env to source control.

# -------------------------------------------------------------------
# App Configuration
# -------------------------------------------------------------------
NODE_ENV=development
PORT=8000
APP_URL=http://localhost:8000

# -------------------------------------------------------------------
# Database Configuration (PostgreSQL Recommended)
# Format: postgresql+psycopg2://USER:PASSWORD@HOST:PORT/DB_NAME
# -------------------------------------------------------------------
DB_USER=sermon_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sermon_translation_db
DATABASE_URL=postgresql+psycopg2://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# -------------------------------------------------------------------
# Caching (optional)
# -------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -------------------------------------------------------------------
# Storage (optional - used if cloud integration is added)
# -------------------------------------------------------------------
S3_BUCKET=
S3_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# -------------------------------------------------------------------
# AI/Translation API Keys
# (Only fill in those your project actually uses)
# -------------------------------------------------------------------
OPENAI_API_KEY=
AZURE_TRANSLATOR_KEY=
AZURE_TRANSLATOR_REGION=
GOOGLE_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# -------------------------------------------------------------------
# Translation Configuration
# -------------------------------------------------------------------
# Provider: "marian" (offline, local) or "gemini" (cloud, high-quality)
TRANSLATION_PROVIDER=gemini
# GEMINI_MODEL=gemini-2.0-flash # previous model, costly 
GEMINI_MODEL=gemini-2.0-flash-exp # updated model
GEMINI_API_KEY=*********
GEMINI_BATCH_SIZE=10

# -------------------------------------------------------------------
# Auth / Secrets
# -------------------------------------------------------------------
JWT_SECRET=change-me # not currently used
SESSION_SECRET=change-me-too # not currently used

# -------------------------------------------------------------------
# Whisper ASR Configuration
# -------------------------------------------------------------------
WHISPER_MODEL=large-v3
WHISPER_LANG=ms
WHISPER_BLOCK_SECS=6
WHISPER_DEVICE=auto
WHISPER_VAD=true
WHISPER_VERBOSE=true

# -------------------------------------------------------------------
# Alignment Configuration (REQUIRED)
# -------------------------------------------------------------------
ALIGNER_MODE=rule
LIVE_INITIAL_THRESHOLD=0.45
LIVE_LOOKAHEAD_LIMIT=10

# -------------------------------------------------------------------
# ASR Buffer Settings (OPTIONAL - defaults exist)
# -------------------------------------------------------------------
BUFFER_MAX_CHUNKS=5
BUFFER_MAX_CHARS=400

# -------------------------------------------------------------------
# Windows-Specific (REQUIRED on Windows)
# -------------------------------------------------------------------
HF_HUB_DISABLE_SYMLINKS=1
