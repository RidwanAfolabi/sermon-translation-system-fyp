# .env.example
# Purpose: Template of required environment variables for local/dev setup.
# Usage: Copy this file to ".env" and fill in the values:
#   cp .env.example .env
# Notes:
# - Format is KEY=VALUE (no quotes unless value contains special chars).
# - Do not commit your real .env to source control.

# App
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Database
DATABASE_URL=postgres://USER:PASSWORD@localhost:5432/sermon_translation

# Caching (optional)
REDIS_URL=redis://localhost:6379

# Storage (optional)
S3_BUCKET=
S3_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AI/Translation (configure what you actually use)
OPENAI_API_KEY=
AZURE_TRANSLATOR_KEY=
AZURE_TRANSLATOR_REGION=
GOOGLE_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Auth/Secrets
JWT_SECRET=change-me
SESSION_SECRET=change-me-too